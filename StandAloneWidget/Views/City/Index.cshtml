@model StandAloneWidget.Models.CitiesModel

@{
    Layout = null;
}

<!DOCTYPE html>

<html>
<head>
    <meta name="viewport" content="width=device-width" />
    <title>Index</title>
</head>
<body>
    <p>
        @Html.ActionLink("Create New", "Create")
    </p>
    <table>
        <tr>
            <th>
                @Html.DisplayNameFor(model => model.city.Name)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.city.State)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.city.DateCreated)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.city.CreatedBy)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.city.LastUdpatedDate)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.city.LastUpdatedBy)
            </th>
            <th></th>
        </tr>
    
    @foreach (var item in Model.Cities) {
        <tr>
            <td>
                @Html.DisplayFor(modelItem => item.Name)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.State)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.DateCreated)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.CreatedBy)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.LastUdpatedDate)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.LastUpdatedBy)
            </td>
            <td>
                @Html.ActionLink("Edit", "Update", new { id=item.ID }) @*|
                @Html.ActionLink("Details", "Details", new { id=item.ID }) |
                @Html.ActionLink("Delete", "Delete", new { id=item.ID })*@
            </td>
        </tr>
    }
    
    </table>
</body>
</html>
