@model StandAloneWidget.Models.CabinClassModel

@{
    Layout = null;
}

<!DOCTYPE html>

<html>
<head>
    <meta name="viewport" content="width=device-width" />
    <title>Index</title>
</head>
<body>
    <p>
        @Html.ActionLink("Create New", "Create")
    </p>
    <table>
        <tr>
            <th>
                @Html.DisplayNameFor(model => model.CabinClass.Code)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.CabinClass.Name)
            </th>
            <th></th>
        </tr>
    
    @foreach (var item in Model.CabinClasses) {
        <tr>
            <td>
                @Html.DisplayFor(modelItem => item.Code)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Name)
            </td>
            <td>
                @Html.ActionLink("Edit", "Update", new { id=item.Code }) @*|
                @Html.ActionLink("Details", "Details", new { id=item.Code }) |
                @Html.ActionLink("Delete", "Delete", new { id=item.Code })*@
            </td>
        </tr>
    }
    
    </table>
</body>
</html>
